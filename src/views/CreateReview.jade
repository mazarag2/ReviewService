.card.mb-4
            |             
            .card-body
              if authenticated
                h2.card-title Create Review Logged in as #{email}
              else
                h2.card-title Create Review
              |               
              p.card-text
                | Upload your review ! 
              |
              if google_auth_url
                 <a href = "#{google_auth_url}">Authenticate with Google</a>
              else 
                    form(method='POST', action='/reviews' encrypt="multipart/form-data" multiple="multiple")
                    input#myFile(name = 'uploadFile' type='file')
                    if authenticated
                       input(type='submit', value='Upload')
                       h5(name = 'email' value = email) uploading as #{email}
                    |   
                    a.btn.btn-primary(href='#') Start your Review in Editor! &rarr;
                    a.btn.btn-primary(href='/review') Or upload your review from Google Drive ! &rarr;
                    |
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
