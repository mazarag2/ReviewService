link(href='./css/blog-home.css', rel='stylesheet')
.card.mb-4
            |
            if fileUploaded
                .alert.alert-success(role='alert')
                    | Review has succesfully been uploaded !			 
            .card-body
              a(href='/home') Back to Home
              if authenticated
                h2.card-title Create Review Logged in as #{email}
              else
                h2.card-title Create Review
              |               
              p.card-text
                | Upload your review ! 
              |
              if google_auth_url
                 <a href = "#{google_auth_url}">Authenticate with Google</a>
              else 
                    form(method='POST', action='/reviews/' + email enctype="multipart/form-data")
                        input#myFile(name = 'uploadFile' type='file' accept='text/html')
                        if authenticated
                           input(type='submit', value='Upload')
                           br
                           br
                           label(for='reviewThumb') Upload a thumbail for your review 
                           input#myFile(name = 'thumbNail' type='file' accept='image/png, image/jpeg')
                           br
                           label(for='reviewName') Review Name
                           input(type='text',name = 'reviewName',id = 'reviewName',value='Enter the name for your review',size = '30', max = '30' required)
                           br
                           label(for='reviewSubText') Enter a short Summary of your review
                           br
                           textarea(rows='4', name='reviewSubText', cols='50')
                           
                            | Enter the a short summary of the review you're posting (This will be displayed when your review is shown)
                           h5(name = 'email' value = '#{email}') uploading as #{email}
                        |   
                    a.btn.btn-primary(href='#') Start your Review in Editor! &rarr;
                    a.btn.btn-primary(href='/review') Or upload your review from Google Drive ! &rarr;
                    |
script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
