doctype html(lang='en')
head
    script(src='https://apis.google.com/js/platform.js', async='', defer='')
    meta(name='google-signin-client_id', content='{LOCAL_CLIENT_ID}')
    <!--https://github.com/BlackrockDigital/startbootstrap-blog-home/blob/master/index.html -->
    meta(charset='utf-8')
    |     
    meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
    |     
    meta(name='description', content='')
    |     
    meta(name='author', content='')
    |     
    title Blog Home - Start Bootstrap Template
    // Bootstrap core CSS
    link(href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO", crossorigin="anonymous")
    // Custom styles for this template
    link(href='./css/blog-home.css', rel='stylesheet')
    |   
    body
    // Navigation
    nav.navbar.navbar-expand-lg.navbar-dark.bg-dark.fixed-top
      .container
        a.navbar-brand(href='#') EntryPoint
        |         
        button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarResponsive', aria-controls='navbarResponsive', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        |         
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ml-auto
            li.nav-item.active
              a.nav-link(href='#')
                | Home
                span.sr-only (current)
            |             
            li.nav-item
              a.nav-link(href='/home') About
            |             
            li.nav-item
              a.nav-link(href='#') Services
            |             
            li.nav-item
              a.nav-link(href='#') Contact
    // Page Content
    .container
      .row
        // Blog Entries Column
        .col-md-8
          h1.my-4
            | Reviews 
            small Secondary Text
          // Blog Post
          for review in reviews
           .card.mb-4
             img.card-img-top(src=review.thumbNailUrl, alt='Card image cap')
             |             
             .card-body
               h2.card-title #{review.reviewName}
               |               
               p.card-text
                 | #{review.reviewSummary}
               |               
               a.btn.btn-primary(href='/getReview?key=' + review.key) Read More &rarr;
             |             
             .card-footer.text-muted
               | Posted on #{review.DatePosted} by #{review.author}
          // Pagination
          ul.pagination.justify-content-center.mb-4
            li.page-item
              a.page-link(href='#') &larr; Older
            |             
            li.page-item.disabled
              a.page-link(href='#') Newer &rarr;
        // Sidebar Widgets Column
        .col-md-4
          // Search Widget
          .card.my-4
            h5.card-header Search
            |             
            .card-body
              .input-group
                input.form-control(type='text', placeholder='Search for...')
                |                 
                span.input-group-btn
                  button.btn.btn-secondary(type='button') Go!
          // Categories Widget
          .card.my-4
            h5.card-header Side Widget
            |             
            .card-body
              a(href='/CreateReview') Create or Upload your Review !
   

      // /.row
    // /.container
    // Footer
    footer.py-5.bg-dark
      .container
        p.m-0.text-center.text-white Copyright &copy; Your Website 2018
      // /.container
    // Bootstrap core JavaScript
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    |     
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.bundle.min.js')
